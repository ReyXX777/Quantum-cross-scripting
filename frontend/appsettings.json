{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*", // Added Component 1: Allow all hosts (for development)
  "ConnectionStrings": { // Added Component 2: Connection strings
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=MyDatabase;Trusted_Connection=True;"
  },
  "AppSettings": { // Added Component 3: Custom app settings
    "ApiKey": "your_api_key",
    "ApplicationName": "MyWebApp"
  },
  "Authentication": { // Added Component 4: Authentication settings
    "JwtSecret": "your_jwt_secret",
    "Issuer": "your_issuer",
    "Audience": "your_audience"
  },
  "FeatureToggles": {  //Added Component 5: Feature Flags
    "EnableNewFeature": true,
    "UseExperimentalAlgorithm": false
  }
}
